<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_gravity="center_vertical" tools:context=".ctask">

    <!-- CardView for Task -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Task Name Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sample Task Name"
                android:background="@drawable/rounded_bg"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="20dp"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <!-- Task Description Section (EditText for multiple lines) -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Writing a detailed quotation for XYZ Company. Include pricing for the requested services, terms and conditions, and any additional information that might be relevant. Ensure accuracy and clarity in the document, and provide a breakdown of costs. Communicate effectively and professionally to meet the client's expectations.
"
                android:textSize="18sp"
                android:lines="9"
                android:layout_marginBottom="8dp"
                android:padding="16dp"
                android:background="@color/white"/>

            <!-- Priority Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_bg_prio_orange"
                android:padding="16dp"
                android:gravity="center"> <!-- Center the text within the RelativeLayout -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Priority: High"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </RelativeLayout>

            <!-- Deadline Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Deadline: 2023-12-31"
                android:padding="16dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>